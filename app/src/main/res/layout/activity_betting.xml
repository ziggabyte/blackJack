<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mat_3"
    tools:context=".BettingActivity">

    <Button
        android:id="@+id/btn_place_bet_and_start"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:backgroundTint="#3DA2CF"
        android:text="@string/betText"
        app:layout_constraintEnd_toEndOf="@id/et_bet"
        app:layout_constraintStart_toStartOf="@id/et_bet"
        app:layout_constraintTop_toBottomOf="@id/et_bet" />


    <EditText
        android:id="@+id/et_bet"
        android:layout_width="150dp"
        android:layout_height="101dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="@string/betSize2"
        android:inputType="number"
        android:textSize="60sp"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start_stack"
        android:layout_width="158dp"
        android:layout_height="88dp"
        android:layout_marginBottom="24dp"
        android:text="@string/tvStartStack"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/et_bet"
        app:layout_constraintEnd_toEndOf="@+id/et_bet"
        app:layout_constraintStart_toStartOf="@+id/et_bet" />


</androidx.constraintlayout.widget.ConstraintLayout>